# quick edit zsh aliases
alias zsh_aliases="vim ~/zsh_aliases/.zsh_aliases"

# quick edit zshrc
alias zshrc="vim ~/.zshrc"

# system command overrides
alias df="df -H"
alias du="du -ch"

# apple aliases
alias show_hidden="defaults write com.apple.finder AppleShowAllFiles YES && killall Finder; say hidden files shown"
alias hide_hidden="defaults write com.apple.finder AppleShowAllFiles NO && killall Finder; say hidden files hidden"

# useful tools
alias my_local_ip="wget http://nwdesign.us/myip.php -O - -q ; echo"
alias my_public_ip="dig +short myip.opendns.com @resolver1.opendns.com"

# update everything
alias update="composer self-update; composer clearcache; softwareupdate -i -a --restart; brew update; brew upgrade; brew cask outdated | cut -f 1 | xargs brew cask reinstall; brew doctor; brew missing; brew cleanup; brew prune; say machine mise Ã  jour"

# Laravel
alias artisan="php artisan"

# git
alias remote="git remote"
alias pull="git pull"
alias push="git push"
alias force="git push --force-with-lease"
alias go="git checkout"
alias fetch="git fetch --all"
alias commit="git add .; git commit -am"
alias amend="git add .; git commit --amend"
alias merge="git merge"
alias status="git status -sb"
alias rebase="git fetch --all; git rebase -i"
alias reset="git reset --hard"
alias cherry-pick="git cherry-pick"
alias diff="git diff"

# dns
alias flushdns='dscacheutil -flushcache;sudo killall -HUP mDNSResponder; say cache flushed'

# navigation
alias home="cd ~"
alias ..="cd .."
alias ...="cd ../.."

# Homestead
alias homestead='function __homestead() { (cd ~/Homestead && vagrant $*); unset -f __homestead; }; __homestead'
