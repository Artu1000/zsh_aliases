#Quick edit aliases file
alias zsh_aliases="vim ~/zsh_aliases/.zsh_aliases"

# Edit ZSH files
alias zsh_config="subl ~/.zshrc"

# System command overrides
alias diff="colordiff"
alias df="df -H"
alias du="du -ch"

# Apple aliases
alias showhidden="defaults write com.apple.finder AppleShowAllFiles YES && killall Finder"
alias hidehidden="defaults write com.apple.finder AppleShowAllFiles NO && killall Finder"

# Server aliases
alias fd-pphu="ssh deploy@10.14.21.11"
alias fd-hu="ssh deploy@10.14.22.11"

# Useful tools
alias myip="wget http://nwdesign.us/myip.php -O - -q ; echo"

# Git
alias push="git push -f origin"
alias go="git checkout"
alias rebase="git fetch upstream; git rebase -i upstream/master"
alias commit="git add .; git commit -am"
alias merge="git merge develop"
alias status="git status"

# FD
alias fd-mob="cd ~/workspace/fd-mobile"
alias fd-web="cd ~/workspace/fd-web"

# Navigation
alias s="cd ../"
