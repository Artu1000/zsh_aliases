# quick edit aliases file
alias zsh_aliases="vim ~/zsh_aliases/.zsh_aliases"

# edit ZSH files
alias zsh_config="vim ~/.zshrc"

# system command overrides
alias diff="colordiff"
alias df="df -H"
alias du="du -ch"

# apple aliases
alias show_hidden="defaults write com.apple.finder AppleShowAllFiles YES && killall Finder"
alias hide_hidden="defaults write com.apple.finder AppleShowAllFiles NO && killall Finder"

# useful tools
alias ip="wget http://nwdesign.us/myip.php -O - -q ; echo"

# update everything
alias update="softwareupdate -i -a; brew update; brew upgrade; brew cleanup; brew prune; brew doctor;"

# git
alias pull="git pull origin"
alias override="git fetch origin; git reset --hard origin"
alias push="git push origin"
alias push-force="git push -f origin"
alias go="git checkout"
alias rebase="git fetch upstream; git rebase -i upstream/master"
alias commit="git add .; git commit -am"
alias merge="git merge"
alias status="git status -sb"

# navigation
alias home="cd ~"
alias ..="cd .."
alias ...="cd ../.."

# Laravel
alias artisan="php artisan"

# Homestead
alias homestead='function __homestead() { (cd ~/Homestead && vagrant $*); unset -f __homestead; }; __homestead '
